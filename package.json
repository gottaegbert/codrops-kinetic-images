{
    "name": "makaleidos",
    "version": "1.0.0",
    "private": true,
    "description": "MaKaleidos - Online Art Gallery Platform with virtual exhibitions and magazine-style presentation",
    "author": "MaKaleidos Team",
    "type": "module",
    "workspaces": [
        "studio",
        "frontend"
    ],
    "scripts": {
        "dev": "npm-run-all --parallel --print-label dev:*",
        "dev:frontend": "npm run dev --workspace=frontend",
        "dev:studio": "node ./scripts/runSanityDev.mjs",
        "build": "npm run build --workspace=frontend",
        "start": "npm run start --workspace=frontend",
        "lint": "npm run lint --workspace=frontend",
        "format": "prettier --write .",
        "format:check": "prettier --check ."
    },
    "devDependencies": {
        "npm-run-all2": "^5.0.2",
        "prettier": "^3.5.3"
    },
    "keywords": [
        "art",
        "gallery",
        "exhibition",
        "webgl",
        "next.js",
        "virtual-gallery",
        "magazine-style"
    ],
    "dependencies": {
        "@vercel/analytics": "^1.5.0",
        "fdir": "^6.5.0"
    }
}
